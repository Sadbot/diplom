{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Photo list</h1>

    <ul>
        <li>
            <a href="{{ path('_photo_upload') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    {% for entity in entities %}
        <ul>
            <li><a href="{{ path('_photo_show', { 'id': entity.id }) }}"><img src="{{ entity.path | imagine_filter('photo_thumbnail') }}"/></a></li>
            <li><a href="{{ path('_photo_show', { 'id': entity.id }) }}">{{ entity.title }}</a></li>
            <li>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</li>
            <li>{{ entity.author }}</li>
        </ul>
    {% endfor %}
{% endblock %}
