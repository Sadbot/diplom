{% extends 'SadbotVideoBundle::layout.html.twig' %}
{% trans_default_domain "VideoBundle" %}

{% block content -%}
    <h1>Photo edit</h1>

    <a href="{{ path('_photo') }}">
        Back to the list
    </a>

    {{ form_start(edit_form) }}

        <div class="">
            {{ form_errors(edit_form) }}
        </div>

        <div>
            {{ form_row(edit_form.title) }}
            {{ form_row(edit_form.description) }}
            {{ form_row(edit_form.status) }}
            {{ form_row(edit_form.photoCategory) }}
        </div>

    {{ form_end(edit_form) }}

    {{ form(delete_form) }}

{% endblock %}
